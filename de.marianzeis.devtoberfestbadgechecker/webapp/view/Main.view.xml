<mvc:View controllerName="de.marianzeis.devtoberfestbadgechecker.controller.Main" displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" core:require="{
		formatter: 'de/marianzeis/devtoberfestbadgechecker/model/formatter'
	}">

	<VBox>
		<Input value="{/scnId}" placeholder="Enter scnId" />
		<Button text="Get Badges" press="onGetBadgesPress" />
		<Table items="{/badges}">
		  <columns>
			<Column>
			  <Text text="Badge Name" />
			</Column>
			<Column>
			  <Text text="URL" />
			</Column>
			<Column>
			  <Text text="Found" />
			</Column>
		  </columns>
		  <items>
			<ColumnListItem>
			  <cells>
				<Text text="{displayName}" />
				<Link text="{badgeURL}" href="{badgeURL}" target="_blank" />
				<Text text="{path: 'found', formatter: '.formatter.booleanToText'}" />
			  </cells>
			</ColumnListItem>
		  </items>
		</Table>
	  </VBox>
</mvc:View>
